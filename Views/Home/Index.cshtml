@model IEnumerable<Destination>
@{
    ViewData["Title"] = "Destinations";
}

<div class="d-flex">
    <h1 class="flex-grow-1">Destinations</h1>
    <div class="flex-shrink-1">
    <a asp-controller="Home" asp-action="Create" class="btn btn-primary">Create New</a>

    </div>

</div>
<hr />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Destination E-Mail</th>
            <th scope="col">NextCloud Path</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Recipient</td>
                <td>@item.Path</td>
                <td>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
